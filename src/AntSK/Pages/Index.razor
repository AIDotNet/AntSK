        <AntDesign.Col Xs="24" Sm="12" Md="12" Lg="12" Xl="6" Style="margin-bottom: 24px;">
            <div @onclick="NavToApp" style=" cursor: pointer;">
                <ChartCard Title="应用数量"
                           Total="@appCount"
                           Icon="wechat"
                           ContentHeight="46">
                    <ChildContent>
                        <Tag Color="@PresetColor.Yellow.ToString()">会话应用：@chatAppCount</Tag>
